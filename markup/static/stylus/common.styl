// Common styles of the project
html
	font-size 62.5%
*, *:before, *:after
	box-sizing inherit
body
	position relative
	font-family $font
	font-size 1.6rem
	background-image url(%=static=%/general/page_bg.jpg)
a
	text-decoration none
ul
	list-style none
ul,li,p,h1,h2,h3
	margin 0
	padding 0
.page
	display -webkit-flex
	display -ms-flex
	display flex
.page__inner
	display: flex
	flex-wrap wrap
	width 1240px
	margin 0 auto
	box-shadow 0px 0 10px 10px rgba(34, 34, 34, 0.3)
	background-color #fff
	+tab()
		width 768px
	+mob()
		width 360px
.page-content__wrap
	display flex
	flex-wrap wrap
	+mob()
		width 360px

.page-content__title-wrap 
	display flex
	justify-content center
	background-color #F9F5F0

.page-content__title 
	padding: 15px 150px;
	margin-bottom: 0;
	position: relative;
	font-family: $font;
	text-align: center;
	text-transform: uppercase;
	background-color: #F9F5F0;
	z-index: 2;
	&:before 
		position absolute
		content ''
		width: 150px;
		height: 3px;
		top: 47%;
		left: -20px;
		background-color: #000;
	&:after 
		position absolute
		content ''
		width: 150px;
		height: 3px;
		top: 47%;
		right: -20px;
		background-color: #000;
	+tab()
		padding 15px 50px
		font-size 25px
		&:before 
			width 50px
		&:after 
			width 50px
	+mob()
		padding 5px
		font-size 23px
		box-sizing border-box
		&:before 
			display none
		&:after 
			display none
.video 
	iframe
		border 0
		margin 0 10px
	+mob()
		display none

#map 
	width 100%
	height 550px
	+mob()
		display none

.overlay
	display none
	position absolute
	left 0
	top 0
	width 100%
	height 100%
	background-color rgba(0,0,0,.5)

.js_img-click 
	position: relative;
	cursor: pointer;
	img
		display: block;
		margin: 0 auto;
	&::after
		position: absolute;
		content: '';
		display: none;
		width: 100px;
		height: 100px;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
		background-image: url(%=static=%/general/magnifier.png);
		background-size: contain;
	&:hover::after 
		display: block;

.js_img-big 
	position: fixed;
	display: none;
	width 100%
	height 100vh
	top: 50%;
	left: 50%;
	transform: translate(-50%, -50%);
	z-index: 1000;
	background-color rgba(0,0,0,.5)
	img 
		margin-top 10px
		max-width 90%
		max-height 100%

.js_img-close 
	position: absolute;
	width: 50px;
	height: 50px;
	top: 0px;
	right: 0px;
	font-size: 0;
	vertical-align: bottom;
	background-image: url(%=static=%/general/close.png);
	cursor: pointer;
	opacity: 0.8;
	&:hover 
		opacity: 1;

.js_img-click.show>div
	display block

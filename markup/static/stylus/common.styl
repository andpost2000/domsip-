// Common styles of the project
html
	font-size 62.5%
*, *:before, *:after
	box-sizing inherit
body
	position relative
	font-family $font
	font-size 1.6rem
	background-image url(%=static=%/general/page_bg.jpg)
img
	max-width 100%
	height auto
	box-sizing content-box
a
	text-decoration none
ul
	list-style none
ul,li,p,h1,h2,h3
	margin 0
	padding 0
.page
	display -webkit-flex
	display -ms-flex
	display flex
.page__inner
	display: flex
	flex-wrap wrap
	width 1240px
	margin 0 auto
	box-shadow 0px 0 10px 10px rgba(34, 34, 34, 0.3)
	background-color #fff
.page-content__wrap
	display flex
	flex-wrap wrap
.page-content__title-wrap {
	display flex
	justify-content center
	background-color #F9F5F0
}
.page-content__title {
	padding: 15px 150px;
	margin-bottom: 0;
	position: relative;
	font-family: $font;
	text-align: center;
	text-transform: uppercase;
	background-color: #F9F5F0;
	z-index: 2;
	&:before {
		position absolute
		content ''
		width: 150px;
		height: 3px;
		top: 47%;
		left: -20px;
		background-color: #000;
	}
	&:after {
		position absolute
		content ''
		width: 150px;
		height: 3px;
		top: 47%;
		right: -20px;
		background-color: #000;
	}
}
.show
	display block
.hide
	display none
.overlay
	display none
	position absolute
	left 0
	top 0
	width 100%
	height 100%
	background-color rgba(0,0,0,.5)

.order-form
	width 420px
	strong
		display inline-block
		vertical-align top
		margin-bottom 10px
		color $c_orange
		font-size 1.6rem
		line-height 4.8rem
		font-weight 500
		text-transform uppercase
	&__form-field
		width 100%
		margin-bottom 20px
		padding-left 60px
		padding-top 12px
		padding-bottom 12px
		border none
		border-radius 25px
		&_time,
		&_date
			width 200px
		&_date
			margin-right 20px
			padding-top 10px
			padding-bottom 9px
	&__submit
		display block
		width 100%
		padding-top 12px
		padding-bottom 12px
		color $c_dark
		font-size 1.4rem
		font-weight 500
		text-transform uppercase
		border none
		border-radius 25px
		background-color $c_orange

.slides {
				position: relative;
				height: 480px;
				padding: 0 10px;
				padding-top: 15px;
				padding-bottom: 25px;
				background-color: #fff;
				border-radius: 3px;
				overflow: hidden;
				&__text {
								position: absolute;
								right: 10px;
								color: #fff;
								z-index: 5;
				}
				&__title {
								width: 250px;
								margin: 0;
								text-align: center;
								font-family: 'cuprum', Arial, "Helvetica Neue", Helvetica, sans-serif;
								background-color: rgba(0, 0, 0, 0.5);
								b {
												display: block;
												font-size: 32px;
								}
				}
				&__btn {
								margin: auto;
								font-family: $font-1;
								padding: 10px;
								color: #fff;
								text-transform: uppercase;
								font-weight: 700;
								text-align: center;
								background-color: rgba(255, 0, 0, 0.65);
								border: 2px solid #f00;
								border-radius: 3px;
								transition: all .1s ease;
								opacity: 0;
								&:hover {
												background-color: #f00;
								}
				}
				&:hover .slides__btn {
								opacity: 1;
				}
				&__item {
								position: relative;
								display: flex;
								flex-wrap: wrap;
								background-color: #ddd;
								width: 720px;
								}
								&__description {
												margin: 0 20px;
												text-indent: 40px;
												text-align: justify;
								}
								img {
												height: 480px;
								}
				}


.allforhome {
	display: flex;
	flex-wrap: wrap;
	justify-content: space-around;
	font-family $font-1
	&__title {
		width: 100%;
		margin: 10px 0px;
		margin-bottom: 12px;
		padding: 5px 0;
		padding-left: 30px;
		flex-grow: 1;
		text-transform: uppercase;
		border-radius: 4px;
		background-color: #F9F5F0;
	}
	&__item {
	position: relative;
	width: 300px;
	margin-bottom: 20px;
	background-color: #999;
	border-radius: 3px;
	overflow: hidden;
	cursor: default;
	transition: all .1s ease-in;
	&:hover {
		box-shadow: 0 6px 25px 0 rgba(0,0,0,.5);
	}
	&:active {
		box-shadow: 0 4px 10px 0 rgba(0,0,0,.5);
		opacity: 0.5;
	}
	}
	&__item-title {
		margin: 5px 0;
		color: #fff;
		text-align: center;
		text-transform: uppercase;
		font-size: 22px;
	}
	&__img-wrap {
		position: relative;
		width: 300px;
		height: 300px;
		overflow: hidden;
		background-color: #f5f5f5;
	}
	img {
		position: relative;
		display: block;
		margin: auto;
		top: 50%;
		transform: translate(0, -50%);
	}
}

.navigation 
	position: relative
	display: flex
	flex-grow: 1
	&__item.on-page 
		background-color: #C1E558
	&__item 
		position: relative
		margin: 0 1px
		flex-grow: 1
		border: 1px solid rgba(186, 163, 96, 0.7)
		border-top: 0
		background-color: #E7FEFC
		border-bottom-right-radius: 5px
		border-bottom-left-radius: 5px
		box-shadow: 0px 1px 1px rgba(34, 34, 34, 0.3)
		a
			display: block;
			box-sizing: border-box;
			padding: 10px 10px;
			font-family: 'cuprum', Arial, "Helvetica Neue", Helvetica, sans-serif;
			font-size: 24px;
			line-height: 30px;
			font-weight: 700;
			color: #000;
			text-align: center;
			text-decoration: none;
			text-transform: uppercase;
		&_logo a 
			padding: 0 15px
		&:hover 
			background-color: #C1E558
			box-shadow: 0px 3px 2px rgba(34, 34, 34, 0.3)
		&:active 
			box-shadow: inset 0px 0px 2px rgba(34, 34, 34, 0.3)
		&-sublist
			position: absolute
			opacity: 0
			transform: translate(-10px, -10px) scale(0, 0)
			z-index: -1
			box-shadow: 3px 3px 15px 2px rgba(0, 0, 0, 0.5)
			transition: 0.05s ease-in-out
			&:before 
				position absolute
				content ''
				width: 70%
				height: 10px
				top: -7px
		&_sub:hover &-sublist
			top: 55px
			opacity: 1
			transform: translate(15px, 0px) scale(1, 1)
			z-index: 10
			cursor: default
		&_subitem
			margin 0
			border-bottom-left-radius 0
			border-bottom-right-radius 0
		img 
			display inline-block
			vertical-align top
			margin-top 5px
		span 
			display inline-block
			vertical-align top
			margin-left 10px
			padding 10px 0

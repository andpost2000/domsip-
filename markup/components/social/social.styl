.social {
				margin: 20px 0;
				margin-left: auto;
				margin-right: 30px;
				text-align: center;
				p {
								margin: 0;
								margin-bottom: 15px;
								font-size: 20px;
								color: #fff;
								border-bottom: 1px dashed rgba(255, 255, 255, 1.0);
				}
				&__btn {
								display: inline-block;
								width: 50px;
								height: 50px;
								margin: 0 2px;
								font-size: 0;
								vertical-align: top;
								text-decoration: none;
								background: #000000;
								transition: background-position 0.3s, backgraund-color 0.25s;
								fill: #fff;
								svg {
												margin-top: 5px;
								}
								&:hover {
												fill: #000;
												background-color: #ffffff;
								}
				}
}
